.side
  .side_header
    .side_header_box
      .side_header_box_name 
        = current_user.name
      .side_header_box_menu
        .side_header_box_info
          =link_to new_information_path do
            %i.fa.fa-edit
        .side_header_box_edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side_content
    - current_user.informations.each do |information|
      .information
        = link_to information_path(information.id), method: :get  do
          .information_name
            = information.info_name
